{
  "compilerOptions": {
    
    "target": "ES2022",
    "lib": ["ES2022"],

    "baseUrl": ".",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["node"],

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}


