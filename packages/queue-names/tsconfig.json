{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
