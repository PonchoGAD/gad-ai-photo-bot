{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": ["node"],

    "rootDir": "src",
    "outDir": "dist",

    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
